<div class="about-content">
  <div class="transbox">

    <div class="container-fluid">


      <div class="error_messages">
        <%= flash[:email_error] %>
      </div>
      <div class="login-padding">

        <div class="wrapper">
          <div class="content-main">
            <div class="row">
              <div class="login-box">

                <%= form_for @user, html: {class: 'form-horizontal'}, :url => {:action => 'create'} do |f| %>

                  <div class="form-group">
                    <div class="col-sm-10 col-md-offset-1 center_login_form">

                      <%= f.label :email, {class: "col-sm-3 control-label"} %>
                      <div class="col-sm-8">
                        <%= f.email_field :email, {class: "form-control", autofocus: true} %>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-10 col-md-offset-1 center_login_form">
                      <%= f.label :password, {class: "col-sm-3 control-label"} %>
                      <div class="col-sm-8">
                        <%= f.password_field :password, {class: "form-control"} %>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10 center_login_button">
                      <%= f.submit "Login", :class => "btn btn-primary" %>
                      <%= link_to "Cancel", handicap_index_path, :class => "btn btn-danger" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>